<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="default" namespace="/" extends="struts-default">
		<action name="register" class="edu.unsw.minifacebook.action.RegisterAction">
			<result name="input">/register.jsp</result>
			<result name="success">/success.jsp</result>
			<result name="error">/fail.jsp</result>
		</action>
		<action name="login" class="edu.unsw.minifacebook.action.LoginAction">
			<result name="input">/login.jsp</result>
			<result name="success" type="redirect">loadposts.action</result>
			<result name="error">/fail.jsp</result>
		</action>
		<action name="loadposts" class="edu.unsw.minifacebook.action.LoadPostsAction">
			<result name="input">/login.jsp</result>
			<result name="success">/posts.jsp</result>
			<result name="error">/fail.jsp</result>
		</action>
		<!---<action name="Emailer" class="edu.unsw.minifacebook.action.Emailer">
			<result name="input">/login.jsp</result>
			<result name="success">/posts.jsp</result>
			<result name="error">/fail.jsp</result>
		</action>-->
	</package>

	<package name="default" namespace="/" extends="struts-default">
		<action name="login" class="edu.unsw.minifacebook.action.LoginAction">
			<result name="input">/login.jsp</result>
			<result name="success" type="redirect">loadposts.action</result>
			<result name="error">/fail.jsp</result>
		</action>
	</package>

	<package name="default" namespace="/" extends="struts-default">
		<action name="loadposts" class="edu.unsw.minifacebook.action.LoadPostsAction">
			<result name="input">/login.jsp</result>
			<result name="success">/posts.jsp</result>
			<result name="error">/fail.jsp</result>
		</action>
	</package>

</struts>